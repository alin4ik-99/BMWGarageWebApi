@using BMW_GarageWebApi.Domain.Models
@model List<Employee>

<div class="container">

    <div class="card shadow border-0 mt-4">
        <div class="card-header bg-primary bg-gradient ml-0 py-3">
            <div class="row">
                <div class="col-12 text-center">
                    <h2 class="text-white py-2">ПРАЦІВНИКИ</h2>
                </div>
            </div>
        </div>

        <div class="card-body p-4">
            <div class="row  pb-3 ">
                <div class="col-12 text-end">
                    <a asp-controller="Employee" asp-action="Create" class="btn btn-primary">
                        <i class="bi bi-plus-circle"></i> Додати нового працівника
                    </a>
                </div>
            </div>
            <div class="table-responsive fs-6">
                    <table class="table table-sm table-bordered table-striped">
                        <thead>
                            <tr>
                                <th> Повне ім'я (ПІБ) </th>
                                <th> Дата народження</th>
                                <th>Дата початку співпраці</th>
                                <th>Гендер </th>
                                <th>Email </th>
                                <th>Номер телефону </th>
                                <th> Посада </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var obj in Model)
                            {
                                <tr>
                                    <td> @obj.FullName </td>
                                    <td> @obj.DateOfBirth </td>
                                    <td> @obj.DateOfHiring </td>
                                    <td> @obj.Gender </td>
                                    <td> @obj.Email </td>
                                    <td> @obj.PhoneNumber </td>
                                    <td> @obj.Position </td>
                                    <td>
                                        <div class="w-50 fs-6 btn-group" role="group">
                                            <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-sm btn-primary mb-1 mx-1">
                                                <i class="bi bi-pencil-square"></i> Редагувати
                                            </a>
                                        <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-sm btn-danger mb-1 mx-1">
                                                <i class="bi bi-trash-fill"></i> Видалити
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
             </div>  
        </div>
    </div>

</div>



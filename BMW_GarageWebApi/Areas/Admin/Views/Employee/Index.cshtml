
@model IEnumerable<EmployeeVM_Index>

<div class="container">
    <div class="card shadow border-0 mt-4">
        <div class="card-header bg-primary bg-gradient ml-0 py-3">
            <div class="row">
                <div class="col-12 text-center">
                    <h2 class="text-white py-2">Employees</h2>
                </div>
            </div>
        </div>
        <div class="card-body p-4">
            <div class="row  pb-3 ">
                <div class="col-5 text-start">
                    <form asp-controller="Employee" asp-action="Index" class="d-flex" role="search">
                        <div class="input-group">
                            <input class="form-control border-2  border-dark shadow ps-3 me-1" type="search" placeholder="Enter your name to search" aria-label="Search" name="SearchString">
                            <button class="btn btn-outline-dark bg-gradient me-4" type="submit">
                                <i class="bi bi-search"></i>
                            </button>
                            <button class="btn btn-outline-dark bg-gradient" type="submit">All employees</button>
                        </div>
                    </form>
                </div>
                <div class="col-7 text-end">
                    <a asp-controller="Employee" asp-action="Create" class="btn btn-primary">
                        <i class="bi bi-plus-circle"></i> Add a new employee
                    </a>
                </div>
            </div>
            <div class="table-responsive table-sm fs-6" style="max-height:400px">
                <table class="table table-sm table-bordered table-striped table-group-divider">
                        <thead>
                            <tr>
                                <th> Full name </th>
                                <th> Date of birth</th>
                                <th>Date Of Hiring</th>
                                <th>Gender </th>
                                <th>Email </th>
                                <th>Phone Number </th>
                                <th> Position </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var obj in Model)
                            {
                                <tr>
                                    <td> @obj.FullName </td>
                                    <td> @obj.DateOfBirth </td>
                                    <td> @obj.DateOfHiring </td>
                                    <td> @obj.Gender </td>
                                    <td> @obj.Email </td>
                                    <td> @obj.PhoneNumber </td>
                                    <td> @obj.Position </td>
                                    <td>
                                        <div class=" fs-6 btn-group" role="group">
                                            <a asp-controller="Employee" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-sm btn-primary bg-gradient me-1">
                                                <i class="bi bi-pencil-square"></i> Edit
                                            </a>
                                            <a asp-controller="Employee" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-sm btn-danger">
                                                <i class="bi bi-trash-fill"></i> Delete
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                </table>
            </div>  
        </div>
    </div>
</div>



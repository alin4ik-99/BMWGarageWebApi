@using BMW_GarageWebApi.Domain.Models
@model IEnumerable<CarRepair>

<div class="container">

    <div class="card shadow border-0 mt-4">
        <div class="card-header bg-primary bg-gradient ml-0 py-3">
            <div class="row">
                <div class="col-12 text-center">
                    <h2 class="text-white py-2">ПОСЛУГИ</h2>
                </div>
            </div>
        </div>

        <div class="card-body p-4">
            <div class="row  pb-3 ">
                <div class="col-5 text-start">
                    <form asp-controller="CarRepair" asp-action="Index" class="d-flex" role="search">
                        <div class="input-group">
                            <input class="form-control border-2  border-dark shadow me-1" type="search" placeholder="Пошук" aria-label="Search" name="SearchString">
                            <button class="btn btn-outline-dark bg-gradient me-4" type="submit">
                                <i class="bi bi-search"></i>
                            </button>
                            <button class="btn btn-outline-dark bg-gradient" type="submit">Всі послуги</button>
                        </div>
                    </form>
                </div>
                <div class="col-7 text-end">
                    <a asp-controller="CarRepair" asp-action="Create" class="btn btn-primary">
                        <i class="bi bi-plus-circle"></i> Додати нову послугу
                    </a>
                </div>
            </div>
            <div class="table-responsive table-sm" style="max-height:400px">
                    <table class="table table-sm table-bordered table-striped table-group-divider text-center">
                        <thead>
                            <tr>
                                <th class=""> Назва послуги</th>
                                <th class=""> Мінімальна ціна</th>
                                <th class=""> Максимальна ціна</th>   
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var obj in Model)
                            {
                                <tr>
                                    <td> @obj.TypeOfCarRepair </td>
                                    <td> @obj.PriceMin грн. </td>
                                    <td> @obj.PriceMax грн. </td>
                                  
                                    <td>
                                        <div class=" btn-group" role="group">
                                            <a asp-controller="CarRepair" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-sm btn-primary bg-gradient mb-1 mx-1">
                                                <i class="bi bi-pencil-square"></i> Редагувати
                                            </a>
                                            <a asp-controller="CarRepair" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-sm btn-danger mb-1 mx-1">
                                                <i class="bi bi-trash-fill"></i> Видалити
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
             </div>  
        </div>
    </div>

</div>



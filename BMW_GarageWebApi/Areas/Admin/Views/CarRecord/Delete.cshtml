@using BMW_GarageWebApi.Domain.Models
@model CarRecordVM


<div class="container w-75 mb-3">
    <div class="card shadow border-0 mt-4">
        <div class="card-header bg-primary bg-gradient ml-0 py-3">
            <div class="row">
                <div class="col-12 text-center">
                    <h2 class="text-white py-2">Видалити запис</h2>
                </div>
            </div>
        </div>
        <div class="card-body p-4">
            <form method="post" class="row">
            <input asp-for="Id" hidden />             
                        <div class="border p-3">
                            <div class="form-floating py-2 col-12">
                                <input asp-for="FullName" disabled class="form-control border-0 shadow" />
                                <label asp-for="FullName" class="ms-2"></label>
                            </div>
                            <div class="form-floating py-2 col-12">
                                <input asp-for="Email" disabled class="form-control border-0 shadow" />
                                <label asp-for="Email" class="ms-2"></label>
                            </div>
                            <div class="form-floating py-2 col-12">
                                <input asp-for="PhoneNumber" disabled class="form-control border-0 shadow" />
                                <label asp-for="PhoneNumber" class="ms-2"></label>
                            </div>
                            <div class="row form-floating py-2 ">
                                <div class="col-6">
                                    <label asp-for="DateOfVisit" class="ms-2"></label>
                                    <input type="date" disabled class="form-control border-0 shadow" asp-for="DateOfVisit" />
                                </div>
                                <div class="col-6">
                                    <label asp-for="StatusCarRecord" class="ms-2"></label>
                                    <select asp-for="StatusCarRecord" disabled class="form-select border-0 shadow">
                                        <option disabled selected>---Обрати статус підтвердження---</option>
                                        <option value="Confirmed">Запис підтверджено</option>
                                        <option value="NotConfirmed">Запис не підтверджено</option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-floating py-2 col-12">
                                <label asp-for="Description" class="ms-2 text-muted"></label>
                                <textarea asp-for="Description" disabled class="form-control border-0 shadow" rows="3"> </textarea>
                            </div>
                            <div class="form-floating py-2 col-12">
                                <select asp-for="EmployeeId" asp-items="Model.EmployeeList" disabled class="form-select border-0 shadow">
                                    <option disabled selected>---Вибір працівника сервісу---</option>
                                </select>
                            </div>                       
                            <div class="row pt-2">
                                <div class="col-6">
                                    <button type="submit" class="btn btn-danger form-control">
                                        <i class="bi bi-trash-fill pe-2"></i>
                                        Видалити
                                    </button>
                                </div>
                                <div class="col-6">
                                    <a asp-controller="CarRecord" asp-action="Index" class="btn btn-outline-primary border form-control">
                                        Повернутися до списку залисів
                                    </a>
                                </div>
                            </div>
                        </div>          
            </form>
        </div>

    </div>
</div>


@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}

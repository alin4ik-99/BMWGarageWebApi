@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav ms-3 text-center">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item me-1 ">
        <a id="manage" class=" text-center fs-6 nav-link" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
    </li>
    <li class="nav-item me-1">
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button id="logout" type="submit" class="nav-link btn btn-link border-0">Logout <i class="bi bi-box-arrow-right"></i> </button>
        </form>
    </li>
}
else
{
    <li class="nav-item me-1 text-center">
        <a class="nav-link fs-5 w-75" id="register" asp-area="Identity" asp-page="/Account/Register">Register <i class="bi bi-person-add"></i></a>
    </li>
    <li class="nav-item me-1 text-center">
        <a class="nav-link fs-5 w-75 " id="login" asp-area="Identity" asp-page="/Account/Login">Login      <i class="bi bi-box-arrow-in-right"></i></a>
    </li>
}
</ul>

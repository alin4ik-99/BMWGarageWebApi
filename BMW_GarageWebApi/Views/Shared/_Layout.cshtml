
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />   
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BMW_GarageWebApi.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css"/>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" />
    <link rel="stylesheet" href="~/images"/>
    <link rel="icon" type="image/x-icon" sizes="32x32" href="~/images/titlebmw.png" />
    <title>BMW GARAGE</title>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand navbar-dark bg-primary border-bottom box-shadow mb-2">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="Customer" asp-controller="Home" asp-action="Index">
                    <img src="/images/logo.jpg" class="rounded-circle" style="width:50px; height:50px;" alt="logo">
                         BMW Garage
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">                      
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link fs-5" asp-area="Customer" asp-controller="Home" asp-action="Index">Головна</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link fs-5" asp-area="Customer" asp-controller="CarRepair" asp-action="Index">Послуги</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link fs-5" asp-area="Customer" asp-controller="Contacts" asp-action="Index">Контакти</a>
                        </li>
                        @if(User.IsInRole(SD.Role_Admin)){
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Управління даними
                                </a>
                                <ul class="dropdown-menu">
                                    <li class="nav-item">
                                        <a class="dropdown-item" asp-area="Admin" asp-controller="CarRepair" asp-action="Index">Послуги</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="dropdown-item" asp-area="Admin" asp-controller="CarRecord" asp-action="Index">Записи</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="dropdown-item" asp-area="Admin" asp-controller="Employee" asp-action="Index">Працівники</a>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                </ul>
                            </li>
                        }
                    </ul>
                    <div class="my-0 rounded-1 text-light" style="width:200px; height:70px;">
                        <p class="text-light text-center mb-1 fs-6 pe-2">
                            Пн-Сб 07:00 - 20:00
                            <small class="" style="color:lightgray;">
                                os.Witosa, Katowice, Polska 
                            </small>
                            <h6 class="bg-danger rounded-1 fs-6 p-1 text-center" style="color:white;">
                                <i class="bi bi-telephone"></i>
                                +48 794 046 951
                            </h6>
                        </p>
                    </div>
                    <partial name="_LoginPartial"/>
                </div>         
            </div>                 
        </nav>
    </header>

    <div class="">
        <main role="main" class="pb-2">
            <partial name="_Notification" />
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer bg-primary text-muted">
        <div class="container text-center" >
            &copy; 2024 - BMW_Garage  <i class="bi bi-heart-fill"></i>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
